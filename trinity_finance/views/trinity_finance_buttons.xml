<odoo>
	<data>
		<record model="ir.ui.view" id="view_kojto_landingpage_form_inherit">
			<field name="name">kojto.landingpage.form.inherit</field>
			<field name="model">kojto.landingpage</field>
			<field name="inherit_id" ref="kojto_landingpage.view_kojto_landingpage_form"/>
			<field name="arch" type="xml">
				<xpath expr="//comment()[.=' Button group 09 ']" position="after">
					<!-- Invoice -->
					<div class="landing_page_item">
						<button name="open_trinity_invoice_list_view" type="object" class="btn landing_page_button">
							<div class="o_button_icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" class="landing_page_svg_icon">
                                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2M9.5 3A1.5 1.5 0 0 0 11 4.5h2V9H3V2a1 1 0 0 1 1-1h5.5zM3 12v-2h2v2zm0 1h2v2H4a1 1 0 0 1-1-1zm3 2v-2h7v1a1 1 0 0 1-1 1zm7-3H6v-2h7z"/>
								</svg>
							</div>
							<span class="landing_page_text">ФАКТУРИ</span>
						</button>
					</div>

					<!-- Cashflow -->
					<div class="landing_page_item" groups="kojto_base.kojto_administrator">
						<button name="open_trinity_cashflow_list_view" type="object" class="btn landing_page_button">
							<div class="o_button_icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" class="landing_page_svg_icon">
									<path fill-rule="evenodd" d="M0 3.5A.5.5 0 0 1 .5 3H1c2.202 0 3.827 1.24 4.874 2.418.49.552.865 1.102 1.126 1.532.26-.43.636-.98 1.126-1.532C9.173 4.24 10.798 3 13 3v1c-1.798 0-3.173 1.01-4.126 2.082A9.6 9.6 0 0 0 7.556 8a9.6 9.6 0 0 0 1.317 1.918C9.828 10.99 11.204 12 13 12v1c-2.202 0-3.827-1.24-4.874-2.418A10.6 10.6 0 0 1 7 9.05c-.26.43-.636.98-1.126 1.532C4.827 11.76 3.202 13 1 13H.5a.5.5 0 0 1 0-1H1c1.798 0 3.173-1.01 4.126-2.082A9.6 9.6 0 0 0 6.444 8a9.6 9.6 0 0 0-1.317-1.918C4.172 5.01 2.796 4 1 4H.5a.5.5 0 0 1-.5-.5"/>
									<path d="M13 5.466V1.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192m0 9v-3.932a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384l-2.36 1.966a.25.25 0 0 1-.41-.192"/>
								</svg>
							</div>
							<span class="landing_page_text">ПАРИЧЕН ПОТОК</span>
						</button>
					</div>

					<!-- Monthly Notification -->
					<div class="landing_page_item" groups="kojto_base.kojto_administrator">
						<button name="open_trinity_monthly_notification_list_view" type="object" class="btn landing_page_button">
                            <div class="o_button_icon">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" class="landing_page_svg_icon">
                                        <path d="M4 0a2 2 0 0 0-2 2v1.133l-.941.502A2 2 0 0 0 0 5.4V14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.4a2 2 0 0 0-1.059-1.765L14 3.133V2a2 2 0 0 0-2-2zm10 4.267.47.25A1 1 0 0 1 15 5.4v.817l-1 .6zm-1 3.15-3.75 2.25L8 8.917l-1.25.75L3 7.417V2a1 1 0 0 1 1-1h8a1 1 0 0 1 1 1zm-11-.6-1-.6V5.4a1 1 0 0 1 .53-.882L2 4.267zm13 .566v5.734l-4.778-2.867zm-.035 6.88A1 1 0 0 1 14 15H2a1 1 0 0 1-.965-.738L8 10.083zM1 13.116V7.383l4.778 2.867L1 13.117Z"/>
                                      </svg>
							</div>
							<span class="landing_page_text">МЕСЕЧНИ ИЗВЕСТИЯ</span>
						</button>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
