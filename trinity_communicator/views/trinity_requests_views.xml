<odoo>
    <!-- list (List) View -->
    <record id="trinity_requests_list" model="ir.ui.view">
        <field name="name">trinity.requests.list</field>
        <field name="model">trinity.requests</field>
        <field name="arch" type="xml">
            <list string="API Requests">
                <field name="field_origin"/>
                <field name="url"/>
                <field name="access_token"/>
                <field name="field_response"/>
                <button name="make_api_post_request"
                        string="Send API Request"
                        type="object"
                        class="oe_highlight"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="trinity_requests_form" model="ir.ui.view">
        <field name="name">trinity.requests.form</field>
        <field name="model">trinity.requests</field>
        <field name="arch" type="xml">
            <form string="API Request">
				<link rel="stylesheet" type="text/css" href="/trinity_file_assets/static/src/css/custom.css"/>
                <sheet>
                    <group>
                        <field name="field_origin"/>
                        <field name="url"/>
                        <field name="access_token"/>
                        <field name="field_response"/>
                    </group>

                    <button name="make_api_post_request" string="Send API Request" type="object" class="oe_highlight"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Open the list View -->
    <record id="action_api_request" model="ir.actions.act_window">
        <field name="name">API Requests</field>
        <field name="res_model">trinity.requests</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="trinity_requests_list"/>
    </record>
</odoo>
