<odoo>
	<data>
		<!-- List Views -->
		<record model="ir.ui.view" id="view_trinity_communication_log_list">
			<field name="name">trinity.communication.log.list</field>
			<field name="model">trinity.communication.log</field>
			<field name="arch" type="xml">
				<list limit="100" sample="1">
					<field name="response_date"/>
					<field name="response_text"/>
					<field name="request_text"/>
					<field name="lrn_origin"/>
				</list>
			</field>
		</record>
		<!-- Form Views -->
		<record model="ir.ui.view" id="view_trinity_communication_log_form">
			<field name="name">trinity.communication.log.form</field>
			<field name="model">trinity.communication.log</field>
			<field name="arch" type="xml">
				<form>
					<link rel="stylesheet" type="text/css" href="/trinity_file_assets/static/src/css/custom.css"/>
					<sheet>
						<div class="oe_title">
							<h1>Комуникационен Лог</h1>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator"/>
								<field name="response_date" placeholder="Дата на отговор"/>
								<field name="lrn_origin" placeholder="Произход на LRN"/>
							</group>
							<group class="col-lg-12">
								<separator class="col-lg-12 separator"/>
								<field name="response_text" placeholder="Текст на отговор"/>
							</group>
							<group class="col-lg-12">
								<separator class="col-lg-12 separator"/>
								<field name="request_text" placeholder="Текст на заявка"/>
							</group>
						</div>
					</sheet>
				</form>
			</field>
		</record>
		<!-- Search Views -->
		<record model="ir.ui.view" id="view_trinity_communication_log_search">
			<field name="name">trinity.communication.log.search</field>
			<field name="model">trinity.communication.log</field>
			<field name="arch" type="xml">
				<search string="Trinity NHIS Response">
					<field name="response_date"/>
					<field name="response_text"/>
					<field name="request_text"/>
					<field name="lrn_origin"/>
				</search>
			</field>
		</record>
		<!-- Actions to Return Model Views -->
		<record model="ir.actions.act_window" id="action_trinity_communication_log">
			<field name="name">Trinity Communication Log</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">trinity.communication.log</field>
			<field name="view_mode">list,form</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
            Create Your New Log.
          </p>
			</field>
		</record>
	</data>
</odoo>
